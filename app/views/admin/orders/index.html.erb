<h2>注文一覧</h2>

<table class="table">
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at %>
        <% end %>
      </td>
      <td>
        <%= order.customer.last_name %>
        <%= order.customer.first_name %>
      </td>
      <td>
        <%= @order_details.where(order_id: order.id).sum(:amount) %>
      </td>
      <td>
        <% case order.status
              when 0 %>
            入金待ち
          <% when 1 %>
            入金確認
          <% when 2 %>
            製作中
          <% when 3 %>
            発送準備完了
          <% when 4 %>
            発送済み
        <% end %>
      </td>
    </tr>
  <% end %>
</table>