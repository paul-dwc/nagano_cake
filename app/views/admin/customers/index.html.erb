<h1>管理者</h1>
<h2>会員一覧</h2>

<table border="1">
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <td>
      <%= customer.last_name %>
      <%= customer.first_name %>
    </td>
    <td><%= customer.email %></td>
    <td>
      <% if customer.is_deleted? %>
        退会
      <% else %>
        有効
      <% end %>
    </td>
  </tr>
  <% end %>
</table>