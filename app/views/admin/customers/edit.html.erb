<h2>会員編集</h2>

<%= form_with model:@customer, url: admin_customer_path, local: true do |f| %>
  <table>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <label><%= f.radio_button :is_deleted, "FALSE", checked: !(@customer.is_deleted) %>有効</label>
        <label><%= f.radio_button :is_deleted, "TRUE", checked: @customer.is_deleted %>退会</label>
      </td>
    </tr>
  </table>
  <%= f.submit "変更を保存" %>
<% end %>