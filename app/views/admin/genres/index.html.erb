<h2>ジャンル一覧・追加</h2>
<div class="row">
  <table>
    <tr>
      <th>ジャンル名</th>
      <td>
        <%= form_with model:@new_genre, url: admin_genres_path, local:true do |f| %>
        <%= f.text_field :name %>
      </td>
      <td>
        <%= f.submit "新規登録" %>
        <% end %>
      </td>
    </tr>
  </table>
  <br>
  <div class="col-xs-6">
    <table class="table">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>