<h1>管理者</h1>
<h2>ジャンル一覧</h2>

<table border="1">
  <tr>
    <th>ID</th>
    <th>ジャンル名</th>
    <th>有効ステータス</th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.id %></td>
    <td><%= genre.name %></td>
    <td>
      <% if genre.is_active? %>
        有効
      <% else %>
        無効
      <% end %>
    </td>
    <td>
      <%= link_to "edit", edit_admin_genre_path(genre.id) %>
    </td>
  </tr>
  <% end %>
</table>

<h2>ジャンル新規登録</h2>

<%= form_with model:@new_genre, url: admin_genres_path, local:true do |f| %>
  <%= f.text_field :name %>
  <%= f.submit "新規登録" %>
<% end %>