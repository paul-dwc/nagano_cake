<h2>ジャンル編集</h2>

<%= form_with model:@genre, url: admin_genre_path, local: true do |f| %>
  <table>
    <tr>
      <th>ジャンル名</th>
      <td><%= f.text_field :name %></td>
      <td></td>
    </tr>
    <tr>
      <th>有効ステータス</th>
      <td><%= f.select :is_active, [["有効", "TRUE"], ["無効", "FALSE"]] %></td>
      <td><%= f.submit "送信" %></td>
    </tr>
  </table>
<% end %>