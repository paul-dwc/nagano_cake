<h1>管理者</h1>
<h2>商品新規登録</h2>

<%= form_with model:@item, url: admin_items_path, local:true do |f| %>
  <h4>ジャンル名</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "Select Genre" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品説明文</h4>
  <%= f.text_area :introduction %>
  <h4>税抜き価格</h4>
  <%= f.text_field :price %>
  <br>
  <%= f.submit "送信" %>
<% end %>