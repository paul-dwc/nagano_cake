<h2>商品編集</h2>

<div class="row">
  <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
    <table>
      <tr>
        <th>商品画像</th>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %></td>
      </tr>
      <tr>
        <th>税込価格</th>
        <td><%= f.text_field :price %></td>
      </tr>
    </table>
    <%= f.submit "変更を保存" %>
  <% end %>
</div>