<h2>商品一覧</h2>

<table  class="table">
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税込価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td>
      <%= link_to admin_item_path(item.id) do %>
        <%= item.name %>
      <% end %>
    </td>
    <td><%= item.price %></td>
    <td><%= item.genre.name %></td>
    <td>
      <% if item.is_active? %>
        有効
      <% else %>
        無効
      <% end %>
    </td>
  </tr>
  <% end %>
</table>