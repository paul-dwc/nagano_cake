<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-10">
    <h2>商品一覧</h2>
    <% @items.each do |item| %>
      <div style="float: left; width: 25%;">
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 100, 100 %>
        <% end %>
        <h4><%= item.name %></h4>
        <p>￥<%= item.price %></p>
      </div>
    <% end %>
  </div>
</div>
