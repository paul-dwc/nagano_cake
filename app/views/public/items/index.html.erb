<h1>ECサイト</h1>
<h2>商品一覧</h2>

<table border="1">
  <tr>
    <th>image</th>
    <th>name</th>
    <th>price</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= attachment_image_tag item, :image, :fill, 60, 60 %></td>
    <td><%= item.name %></td>
    <td>￥<%= item.price %></td>
  </tr>
  <% end %>
</table>