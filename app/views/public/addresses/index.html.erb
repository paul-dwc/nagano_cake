<h1>ECサイト</h1>
<h2>配送先登録/一覧</h2>

<%= form_with model:@address, url: addresses_path, local:true do |f| %>
<table>
  <tr>
    <th>郵便番号(ハイフンなし)</th>
    <td><%= f.text_field :postal_code %></td>
    <td></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address, :size=>"60" %></td>
    <td></td>
  </tr>
  <tr>
    <th>宛名</th>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit "新規登録" %></td>
  </tr>
</table>
<% end %>

<table border="1">
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td>リンクボタン</td>
  </tr>
  <% end %>
</table>
