<div class="row">
  <h2>マイページ</h2>
  <div class="col-xs-8">
    <h3>登録情報</h3>
    <%= link_to "編集する", customers_edit_path %>
    <table border="1" class="table">
      <tr>
        <th>氏名</th>
        <td>
          <%= @customer.last_name %>
          <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <th>カナ</th>
        <td>
          <%= @customer.last_name_kana %>
          <%= @customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
</div>
<div class="row">
  <table>
    <tr>
      <th>配送先</th>
      <td><%= link_to "一覧を見る", addresses_path %></td>
    </tr>
    <tr>
      <th>注文履歴</th>
      <td><%= link_to "一覧をみる", orders_path %></td>
    </tr>
  </table>
</div>