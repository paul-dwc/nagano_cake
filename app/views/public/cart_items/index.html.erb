<h1>ECサイト</h1>
<h2>カート内商品一覧</h2>

<table border="1">
  <tr>
    <th>商品名</th>
    <th>注文者</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% total = 0 %>
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.customer_id %></td>
    <td><%= cart_item.item.price %></td>
    <td><%= cart_item.amount %></td>
    <td>
      <% subtotal = cart_item.item.price * cart_item.amount %>
      <% total = total + subtotal %>
      <%= subtotal %>
    </td>
    <td>
      削除ボタン
    </td>
  </tr>
  <% end %>
  <table border="1">
    <tr>
      <th>合計金額</th>
      <td><%= total %></td>
    </tr>
  </table>
</table>