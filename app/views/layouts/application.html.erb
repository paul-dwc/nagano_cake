<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <%= link_to root_path do %>
            <h1 style="border :solid medium black">  LOGO  </h1>
          <% end %>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if customer_signed_in? %>
              <li><h4>ようこそ、<%= current_customer.last_name %>さん！</h4></li>
              <li><h2><%= link_to "マイページ", customers_mypage_path %></h2></li>
              <li><h2><%= link_to "商品一覧", items_path %></h2></li>
              <li><h2><%= link_to "カート", cart_items_path %></h2></li>
              <li><h2><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></h2></li>
            <% elsif admin_signed_in? %>
              <li><h2><%= link_to "商品一覧", admin_items_path %></h2></li>
              <li><h2><%= link_to "会員一覧", admin_customers_path %></h2></li>
              <li><h2><%= link_to "注文履歴一覧", admin_orders_path %></h2></li>
              <li><h2><%= link_to "ジャンル一覧", admin_genres_path %></h2></li>
              <li><h2><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></h2></li>
            <% else %>
              <li><h2><%= link_to "About", about_path %></h2></li>
              <li><h2><%= link_to "商品一覧", items_path %></h2></li>
              <li><h2><%= link_to "新規登録", new_customer_registration_path %></h2></li>
              <li><h2><%= link_to "ログイン", new_customer_session_path %></h2></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
